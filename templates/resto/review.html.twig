{% extends 'base.html.twig' %}

{% block title %}Hello RestoController!{% endblock %}

{% block body %}

    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8">
                <img src="{{ asset(resto.media.first.fileName) }}" width="500" height="500" alt="">
            </div>
            <div class="col-md-4">
                <p>Name: <span> {{ resto.name }}</span></p>

                <form name="review" method="post">
                    <div id="review">
                        <div><label for="review_message" class="required">Message</label>
                            <textarea id="review_message" name="review[message]" required="required"
                                      class="form-control form-control-solid"></textarea></div>
                        <div><label for="review_note" class="required">Note</label>
                            <input type="number" id="review_note"
                                   name="review[note]"
                                   required="required"
                                   class="form-control form-control-solid"
                                   min="1" max="20"
                                   placeholder="Note"></div>
                        <input type="hidden" id="review__token" name="review[_token]"
                               value="cad608aea59f50706d.0c5t9NsD3PcrA5NTGIu-1_rEDxMC84tdXow40mQjjO4.vL84volC7KUaddgpQuPLs4yNdipSo_kaO-R861Bwv6Knhzmbs1XrwwZx0g">
                    </div>
                    <button class="btn">Save</button>
                </form>


                <a href="{{ path('restaurant_show',{'id': resto.id}) }}">Return</a>
            </div>

        </div>
    </div>

{% endblock %}
